<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/upper_corner"
    tools:context=".Fragment.ApplyFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="40dp"
       android:orientation="vertical">
       <View
           android:id="@+id/view"
           android:layout_width="40dp"
           android:layout_height="4dp"
           android:layout_gravity="center"
           android:background="@drawable/top_shape"
           android:layout_margin="20dp"/>
       <TextView
           android:id="@+id/tvqueue"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:gravity="center"
           android:text="Add to queue"
           android:textSize="16sp"
           />

       <TextView
           android:id="@+id/tvhome"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:gravity="center"
           android:text="Set as HomeScreen"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/tvlock"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:gravity="center"
           android:text="Set as LockScreen"
           android:textSize="16sp"
           />


   </LinearLayout>

</FrameLayout>